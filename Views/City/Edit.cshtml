@model WebApplication_aspnet.Models.City

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Ciudad</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Nid_city" />

            <div class="mb-3">
                <label asp-for="Sname" class="control-label">Nombre</label>
                <input asp-for="Sname" class="form-control" />
                <span asp-validation-for="Sname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Dcreated_at" class="control-label">Fecha Creaci√≥n</label>
                <input asp-for="Dcreated_at" type="date" class="form-control" />
                <span asp-validation-for="Dcreated_at" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}