@model WebApplication_aspnet.Models.User

@{
    ViewData["Title"] = "Crear Usuario";
}

<h1>Crear Nuevo Usuario</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Sname" class="control-label">Nombre</label>
                <input asp-for="Sname" class="form-control" />
                <span asp-validation-for="Sname" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Slast_name" class="control-label">Apellido</label>
                <input asp-for="Slast_name" class="form-control" />
                <span asp-validation-for="Slast_name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Semail" class="control-label">Correo Electrónico</label>
                <input asp-for="Semail" type="email" class="form-control" />
                <span asp-validation-for="Semail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nphone" class="control-label">Teléfono</label>
                <input asp-for="Nphone" type="number" class="form-control" />
                <span asp-validation-for="Nphone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Saddress" class="control-label">Dirección</label>
                <input asp-for="Saddress" class="form-control" />
                <span asp-validation-for="Saddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Dcreated_at" class="control-label">Fecha de Creación</label>
                <input asp-for="Dcreated_at" type="date" class="form-control" />
                <span asp-validation-for="Dcreated_at" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}