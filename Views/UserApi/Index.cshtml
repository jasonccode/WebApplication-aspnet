@model IEnumerable<WebApplication_aspnet.Models.User>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Listado de Usuarios</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Crear Nuevo
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Teléfono</th>
                <th>Dirección</th>
                <th>Fecha Creación</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Slast_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nphone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saddress)
                    </td>
                    <td>
                        @* Formato corto de fecha para que se vea mejor *@
                        @item.Dcreated_at.ToString("dd/MM/yyyy")
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Nid_user" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Nid_user" class="btn btn-sm btn-info text-white">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Nid_user" class="btn btn-sm btn-danger">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        // Leemos el valor de TempData desde C#
        var mensaje = '@TempData["Mensaje"]';
        var tipo = '@TempData["Tipo"]';

        if (mensaje && mensaje !== '') {
            Swal.fire({
                title: '¡Hecho!',
                text: mensaje,
                icon: tipo, // success, error, warning
                confirmButtonText: 'Aceptar'
            });
        }
    </script>
}