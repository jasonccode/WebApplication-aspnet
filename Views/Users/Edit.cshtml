@model WebApplication_aspnet.Models.User

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar Usuario</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" id="formEditar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="Nid_user" />

            <div class="mb-3">
                <label asp-for="Sname" class="control-label">Nombre</label>
                <input asp-for="Sname" class="form-control" />
                <span asp-validation-for="Sname" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="Slast_name" class="control-label">Apellido</label>
                <input asp-for="Slast_name" class="form-control" />
                <span asp-validation-for="Slast_name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Semail" class="control-label">Correo</label>
                <input asp-for="Semail" class="form-control" />
                <span asp-validation-for="Semail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nphone" class="control-label">Teléfono</label>
                <input asp-for="Nphone" class="form-control" />
                <span asp-validation-for="Nphone" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Saddress" class="control-label">Dirección</label>
                <input asp-for="Saddress" class="form-control" />
                <span asp-validation-for="Saddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Dcreated_at" class="control-label">Fecha Creación</label>
                <input asp-for="Dcreated_at" type="date" class="form-control" readonly />
                <span asp-validation-for="Dcreated_at" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="button" value="Guardar Cambios" class="btn btn-primary" onclick="confirmarEdicion()" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function confirmarEdicion() {
            Swal.fire({
                title: '¿Guardar cambios?',
                text: "¿Estás seguro de que la información es correcta?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, guardar',
                cancelButtonText: 'Revisar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // 3. Enviamos el formulario manualmente
                    document.getElementById('formEditar').submit();
                }
            });
        }
    </script>
}